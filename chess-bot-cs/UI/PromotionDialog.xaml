<Window x:Class="chess_bot_cs.UI.PromotionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Promote Pawn" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="QueenButton" Content="Queen" Width="80" Height="80" Margin="10" Click="Queen_Click"/>
            <Button x:Name="RookButton" Content="Rook" Width="80" Height="80" Margin="10" Click="Rook_Click"/>
            <Button x:Name="BishopButton" Content="Bishop" Width="80" Height="80" Margin="10" Click="Bishop_Click"/>
            <Button x:Name="KnightButton" Content="Knight" Width="80" Height="80" Margin="10" Click="Knight_Click"/>
        </StackPanel>
    </Grid>
</Window>